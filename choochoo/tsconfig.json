{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"], 
    "allowJs": false, 
    "jsx": "react-jsx", 
    "moduleResolution": "node", // Use Node resolution strategy
    "module": "esnext", // Use ES Modules
    "esModuleInterop": true, // Enable interop between CommonJS and ES modules
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip checking library files for faster compilation
    "forceConsistentCasingInFileNames": true, // Ensure file name case consistency
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
// basic typescript config json file
